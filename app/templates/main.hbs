<div class="row wrapper">
  <div class="row">
    <div class="small-12 small-centered columns rulesandupload">

      <section class="accordion thissection">
        <header id="head3">How to play</header>

        <p id="para3">How to play instruction.</p>
      </section>

      <section class="accordion">
        <header id="head2">Add Post</header>

        <form id="addPhoto">
          <input type="text" placeholder="Photo URL" id="photoURL">
          <input type="text" placeholder="Answer" id="answer">
          <button class="btn waves-effect waves-light" type="submit" name="action">Submit
          <i class="mdi-content-send right"></i></button>
        </form>
      </section>
    </div>
  </div>
</div>

<div class="dropdown">
  <label>Sort by:
    <select id="sortBy">
      <option value="available">Available</option>
      <option value="completedFail">Completed - Successful</option>
      <option value="completedSuccess">Completed - Unsuccessful</option>
      <option value="myPosts">My Posts</option>
    </select> <!-- end contactCat -->
  </label>
</div>

<div class="row">
  <div class="small-12 medium-6 large-4 columns">

    <ul>
      {{#each post}}

      <li data-id="{{_id}}">
        <div class="postview">
          <a href="#post/{{_id}}"><img src="{{image_url}}"></a>
          <a href="#post/{{_id}}"><div class="opacity"></div></a>
          <p>Taken by: {{username}}</p>
        </div>
      </li>

      {{/each}}
    </ul>
  </div>
</div>

